@model IEnumerable<LibraryApp.Services.Dtos.Book.BookDto>

@{
    ViewBag.Title = "Index";
}

<h2>Книги</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Индетификатор
        </th>
        <th>
            Название
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BookId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { bookId = item.BookId }) |
            @Html.ActionLink("Детальней", "Details", new { bookId = item.BookId }) |
            @Html.ActionLink("Удалить", "Delete", new { bookId = item.BookId })
        </td>
    </tr>
}

</table>
