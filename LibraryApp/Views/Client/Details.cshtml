@model LibraryApp.Services.Dtos.Client.ClientDatailsDto

@{
    ViewBag.Title = "Details";
}
<h2>Клиенты</h2>

<div class="d-flex">

    <div>
        <h4>Подробные данные о клиенте</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Индетификатор
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ClientId)
            </dd>

            <dt>
                Имя
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                Телефон
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Telephone)
            </dd>

            <dt>
                Адрес
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Address)
            </dd>

            <dt>
                Дата добавления
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateCreated)
            </dd>
        </dl>
        <hr />
    </div>

    <div class="ms-5">
        <div>
            <h4 class="d-inline">История клиента</h4>
            <button class="btn btn-success ms-3" data-clientId="@Model.ClientId" id="add-client-book">+</button>
            <select id="select-book-element" class="form-select-sm">
                <option>Выберите книгу</option>
            </select>
            <button class="btn btn-primary" data-clientid="@Model.ClientId" id="show-client-book-button">Показать/Скрыть историю</button>
        </div>

        <hr />

        <div id="client-book-viewer">

        </div>
        
    </div>



</div>


@section Scripts{
    @Scripts.Render("~/Scripts/client-book-script.js")
}


