@model IEnumerable<LibraryApp.Services.Dtos.Client.ClientDto>

@{
    ViewBag.Title = "Index";
}

<h2>Клиенты</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Индетификатор
        </th>
        <th>
            Имя
        </th>
        <th>
            Телефон
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
            <td>
                #@Html.DisplayFor(modelItem => item.ClientId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.ActionLink("Детальней", "Details", new { clientId = item.ClientId }) |
                @Html.ActionLink("Редактировать", "Edit", new { clientId = item.ClientId })
            </td>
    </tr>
}

</table>
